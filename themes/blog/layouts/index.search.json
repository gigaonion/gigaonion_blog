{{/* layouts/index.search.json */}}
{{- $index := slice -}}
{{- range where .Site.RegularPages "Type" "posts" -}}
  {{- $index = $index | append (dict
      "LinkTitle" .LinkTitle
      "RelPermalink" .RelPermalink
      "Summary" .Summary
      "Date" (.Date.Format "2006-01-02T15:04:05-07:00")
      "FormattedDate" (.Date.Format "2006年01月02日 (Mon)")
      "Lastmod" (.Lastmod.Format "2006-01-02T15:04:05-07:00")
      "FormattedLastmod" (.Lastmod.Format "2006年01月02日 (Mon)")
      "title" .Title
      "url" .RelPermalink
      "tags" .Params.tags
      "slug" (.Slug | default .File.BaseFileName)
    )
  -}}
{{- end -}}
{{- $index | jsonify -}}
